 @import "../../wxParse/wxParse.wxss"; 
page {
  background: #fff;
}

.forswiper {
  width: 100%;
}

.forbanner {
  width: 100%;
  height: 500rpx;
}

.forbanner image {
  width: 100%;
  height: 500rpx;
}

.forswiper swiper {
  width: 100%;
  height: 500rpx;
}

.forswiper swiper image {
  width: 100%;
  height: 500rpx;
}

.shopname {
  padding: 0 30rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 100rpx;
  font-weight: 500;
}

.location {
  padding: 0 30rpx;
  position: relative;
  line-height: 90rpx;
  text-indent: 60rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.location .left {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 27rpx;
  height: 28rpx;
}

.location .right {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
  height: 24rpx;
}
.line{
  width: 690rpx;
  height: 1rpx;
  background: #e6e6e6;
  margin: 0 auto;
}
