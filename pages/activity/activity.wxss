@import '../../component/coupon.wxss';

page {
  background: #ca0618;
}

.banner {
  width: 100%;
  height: 940rpx;
}

.displayarea {
  padding: 0 30rpx 150rpx;
}

.displayarea .tip {
  text-align: center;
  color: #ffcd92;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.whiteblk {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx 20rpx 10rpx 20rpx;
  margin: 20rpx auto;
}

.whiteblk .blklist {
  margin-top: 20rpx;
}

.whiteblk .blklist ul {
  overflow: hidden;
}

.whiteblk .blklist ul:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.whiteblk .blklist ul li {
  float: left;
  width: 14.2%;
  text-align: center;
}

.whiteblk .blklist ul li image {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  margin: 0 auto;
}

.whiteblk .blklist ul li span {
  display: inline-block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 18rpx;
  position: relative;
  top: -10rpx;
  color: #333;
  font-weight: 500;
}

.swiperarea {
  width: 100%;
  height: 520rpx;
}

.swiperarea .recordswiper {
  width: 100%;
  height: 100%;
}

.recordswiper .recordblk {
  height: 100rpx;
  margin: 24rpx auto;
  overflow: hidden;
}

.recordswiper .recordblk:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.recordswiper .recordblk image {
  float: left;
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.recordswiper .recordblk .rightcon {
  float: right;
  width: 520rpx;
}

.recordswiper .recordblk .rightcon .lineone {
  line-height: 50rpx;
  overflow: hidden;
}

.recordswiper .recordblk .rightcon .linetwo {
  line-height: 50rpx;
  overflow: hidden;
}

.recordswiper .recordblk .rightcon .lineone .name {
  float: left;
  color: #333;
  font-size: 28rpx;
}

.recordswiper .recordblk .rightcon .lineone .price {
  float: right;
  font-size: 26rpx;
  color: #ca0618;
}

.recordswiper .recordblk .rightcon .lineone:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.recordswiper .recordblk .rightcon .linetwo:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.recordswiper .recordblk .rightcon .linetwo .theme {
  float: left;
  color: #666;
  font-size: 24rpx;
}

.recordswiper .recordblk .rightcon .linetwo .time {
  float: right;
  color: #999;
  font-size: 24rpx;
}

.sectip {
  margin: 20rpx auto;
  width: 670rpx;
  height: 168rpx;
  background: #fff;
  position: relative;
}
.sectip image{
  width: 536rpx;
  height: 83rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.titleimg {
  width: 750rpx;
  transform: translateX(-30rpx);
  height: 150rpx;
}

.businesstip {
  position: relative;
  color: #fff;
  font-size: 36rpx;
  letter-spacing: 8rpx;
  text-align: center;
  top: -20rpx;
}

.whiteblk .ranktitle {
  text-align: center;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}

.whiteblk .ranktable {
  width: 630rpx;
  margin: 10rpx auto;
}

.whiteblk .ranktable .thead {
  display: flex;
  align-items: center;
  height: 60rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.whiteblk .ranktable .tbody {
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #ededed;
  font-size: 24rpx;
}

.whiteblk .ranktable .td {
  text-align: center;
  line-height: 30rpx;
  width: 210rpx;
  display: inline-block;
  color: #333;
}

.whiteblk .ranktable .td.red {
  color: #b30919;
}

.article {
  color: #fbe8ba;
  font-size: 24rpx;
  padding: 0;
}

.phone {
  text-align: center;
  color: #fbe8ba;
  font-size: 24rpx;
  margin-top: 50rpx;
}

.musicicon {
  width: 64rpx;
  height: 64rpx;
  position: fixed;
  right: 30rpx;
  top: 60rpx;
  z-index: 30;
}

.animate{
  animation: spin 2.5s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
