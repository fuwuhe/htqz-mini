/**index.wxss**/
.indexlist{
  padding: 20rpx 30rpx;
  overflow: scroll;
  height: 100vh;
}
scroll-view{
  height: 100%;
}
.indexlist .ul{
  width: 100%;
}
.indexlist .ul .li{
  width: 100%;
  background: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.indexlist .ul .li .image{
  width: 100%;
  height: 340rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  background: rgb(245, 245, 245)
}
.indexlist .ul .li .image image{
  width: 100%;
}
.indexlist .ul .li .content{
  padding: 15rpx 20rpx;
  overflow: hidden;
  background: #fff;
}
.indexlist .ul .li .content .leftcon{
  float: left
}
.indexlist .ul .li .content .leftcon .title{
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.indexlist .ul .li .content .leftcon .price{
  color: #CA0618;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.indexlist .ul .li .content .leftcon .price span{
  font-size: 36rpx
}

.indexlist .ul .li .content .rightcon{
  float: right;
  font-size: 26rpx;
  color: #565D65;
}
.indexlist .ul .li .content .rightcon .timebox{
  display: inline-block;
  padding: 2rpx 8rpx;
  background: #565D65;
  color: #FFFFFF;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin: 0 5rpx;
}